@model IEnumerable<ThemeParkManagementSystem.Models.revenue>
@{
    ViewBag.Title = "RidePopularity";
}

<h2>Reports</h2>

<p>
    @using (Html.BeginForm("RidePopularity", "Reports", FormMethod.Get))
    {
        <text> Date 1 </text>
        @Html.TextBox("date1")
        <text> Date 2 </text>
        @Html.TextBox("date2")
        <text> Ride ID </text>
        @Html.TextBox("id")<input type="submit" value="Search" />
    }
</p>
<table>
    <tr>
        <th>
            <text>The number of guests in the given date range was </text>@ViewData["RidePopularity"]
        </th>
    </tr>
</table>