@model IEnumerable<ThemeParkManagementSystem.Models.MAINTENANCE>

@{
    ViewBag.Title = "Index";
}

<h2>Maintenance</h2>

@if (Convert.ToBoolean(ViewData["userRole"]))
{
    @Html.ActionLink("Create New", "Create")
}

<table class="table">
    <tr>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
        <th>
            Summary
        </th>
        <th>
            Ride Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RIDE.RideName)
            </td>
            <td>
                @if (Convert.ToBoolean(ViewData["userRole"]))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.CaseID })<text> |</text>
                }
                @Html.ActionLink("Details", "Details", new { id = item.CaseID })
                @if (Convert.ToBoolean(ViewData["userRole"]))
                {
                    <text> | </text>@Html.ActionLink("Delete", "Delete", new { id = item.CaseID })
                }
                @if (item.EndTime == null)
                {
                    <text> | </text>@Html.ActionLink("Maintenance Completed", "CompleteMaintenance", new { id = item.CaseID })
                }
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Rides Page", "Index", "Rides")
</p>
