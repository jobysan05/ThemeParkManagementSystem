@model ThemeParkManagementSystem.Models.StaffIndexData

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Staff", FormMethod.Get))
    {
        <text> Search By: </text> @Html.RadioButton("searchBy", "Name") <text> Last Name </text>
        @Html.TextBox("search")<input type="submit" value="Search" />

    }
</p>
<table class="table">
    <tr>
        <th>
            Employee Type
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Staff)
    {
        string selectedRow = "";
        if (item.EmployeeID == ViewBag.EmployeeID)
        {
            selectedRow = "selectedrow";
        }
        <tr class="@selectedRow" valign="top">
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.EmployeeID }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
            </td>
        </tr>
    }

</table>

@if (Model.RidesStaff != null)
{
    <h3>Employee's ride</h3>
    <table class="table">
        <tr>
            <th>Ride ID</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
        @foreach (var item in Model.RidesStaff)
        {
            <tr>
                <td>
                    @item.RideID
                </td>
                <td>
                    @item.StartDate
                </td>
                <td>
                    @item.EndDate
                </td>
            </tr>
        }
    </table>
}
<p>
    @Html.ActionLink("Access Employee Types Page", "Index", "StaffLookup")
</p>
<p>
    @Html.ActionLink("Access Rides Staff Page", "Index", "Rides_Staff")
</p>