@model IEnumerable<ThemeParkManagementSystem.Models.INVENTORY>

@{
    ViewBag.Title = "Index";
}

<h2>Inventory</h2>

<p>
    @if (Convert.ToBoolean(ViewData["userRole"]))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Product Price
        </th>
        <th>
            Product Stock
        </th>
        <th>
            Shop Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SHOP.ShopName)
            </td>
            <td>
                @if (Convert.ToBoolean(ViewData["userRole"]))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID })<text> |</text>
            }
            @Html.ActionLink("Details", "Details", new { id = item.ProductID })
            @if (Convert.ToBoolean(ViewData["userRole"]))
            {
                <text> | </text>@Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            }
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Shops Page", "Index", "Shops")
</p>